{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "gen": "graphql-codegen --config codegen.yml",
    "start  ": "yarn workspace @abb/web start",
    "heroku-postbuild": "yarn workspace @abb/web build",
    "build": "lerna run build --scope={@abb/controller,@abb/common,@abb/web}",
    "build:server": "lerna run build --scope={@abb/common,@abb/server}",
    "build:web": "lerna run build --scope={@abb/common,@abb/web}"
  },
  "dependencies": {
    "graphql": "^15.5.1",
    "lerna": "^4.0.0",
    "netlify-cli": "5.4.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.7",
    "@graphql-codegen/typescript": "1.23.0",
    "@graphql-codegen/typescript-operations": "1.18.4",
    "@graphql-codegen/typescript-react-apollo": "2.3.1"
  },
  "name": "airbnb"
}
